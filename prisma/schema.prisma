
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  role         String   @default("USER")
  qrData       String?  // cached data string used for QR code
  createdAt    DateTime @default(now())
  membership   Membership?
  checkins     Checkin[]
}

model Membership {
  id          String   @id @default(cuid())
  userId      String   @unique
  active      Boolean  @default(false)
  expiresAt   DateTime?
  plan        String?  // e.g., "Monthly", "10-entrances", etc.
  type        String   @default("Basic") // Basic, Premium, VIP
  paidAt      DateTime? // When the payment was made
  paidAmount  Float?   // Amount paid in cash
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Checkin {
  id        String   @id @default(cuid())
  userId    String
  createdAt DateTime @default(now())
  via       String? // "qr" or "manual"

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
